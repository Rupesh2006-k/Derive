<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Login</title>
  </head>

  <body
    class="flex items-center justify-center min-h-screen bg-gradient-to-br from-green-50 to-emerald-100"
  >
    <form
      autocomplete="off"
      action="/login"
      method="post"
      class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-sm space-y-6 border border-emerald-100"
    >
      <h2
        class="text-2xl font-bold text-center text-emerald-700"
      >
        Login
      </h2>

      <!-- Username -->
      <div>
        <label
          for="username"
          class="block mb-2 text-sm font-medium text-gray-800"
          >Username</label
        >
        <input
          name="username"
          type="text"
          id="username"
          placeholder="Enter your username"
          required
          class="w-full outline-none px-4 py-2 border border-emerald-300 rounded-lg 
          focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 
          bg-emerald-50/40 text-black transition"
        />
      </div>

      <!-- Password -->
      <div>
        <label
          for="password"
          class="block mb-2 text-sm font-medium text-gray-800"
          >Password</label
        >
        <input
          type="password"
          id="password"
          name="password"
          placeholder="••••••••"
          required
          class="w-full outline-none px-4 py-2 border border-emerald-300 rounded-lg 
          focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 
          bg-emerald-50/40 text-black transition"
        />
      </div>

      <!-- Button -->
      <button
        type="submit"
        class="w-full bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-2.5 rounded-lg 
        shadow-md focus:ring-4 focus:ring-emerald-300 transition"
      >
        Login
      </button>

      <a
        href="/"
        class="block text-center text-emerald-700 hover:underline"
      >
        ← Back to Register
      </a>
    </form>
  </body>
</html>
